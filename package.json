{
  "name": "instrumentsmcp",
  "version": "0.1.0",
  "description": "AI-native performance profiling for iOS and macOS apps. Wraps Xcode Instruments (xctrace) as an MCP server with structured analysis, severity classification, and actionable summaries.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "instrumentsmcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "mcp",
    "instruments",
    "xctrace",
    "profiling",
    "ios",
    "performance",
    "xcode"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "fast-xml-parser": "^5.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
